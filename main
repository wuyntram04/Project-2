void mainMenu();
void StatisticianFuntion();
void RationalFunction();
void RationalMenu();





int main()
{
	do
	{
		system("cls");
		mainMenu();
		switch (toupper(inputChar("\n\tOption: ")))
		{
		case '1': StatisticianFuntion();
			break;
		case'4': RationalFunction();
			break;
		default:
			cout << "\n\tERROR: Invalid Input.";
			break;

		}



	} while (true);

	return EXIT_SUCCESS;
}


