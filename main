#include<iostream>
#include"input.h"
#include"Statistician.h"
using namespace std;

void mainMenu();
void StatisticianFuntion();





int main()
{
	do
	{
		system("cls");
		mainMenu();
		switch (toupper(inputChar("\n\tOption: ")))
		{
		case '1': StatisticianFuntion();
			break;
		default:
			cout << "\n\tERROR: Invalid Input.";
			break;

		}



	} while (true);

	return EXIT_SUCCESS;
}


